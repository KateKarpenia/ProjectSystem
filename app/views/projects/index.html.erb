<h1>Listing projects</h1>

<% if current_user.admin? %>
<%= link_to 'New project', new_project_path %>
<% end %>

<table>
	<tr>
		<th>Name</th>
		<th>Summary</th>
		<th>Start Date</th>
		<th>End Date</th>
		<th>Team</th>
		<th colspan="3"></th>
	</tr>
	
	<% @project.each do |project| %>
		<tr>
			<td><%= project.name %></td>
			<td><%= project.summary %></td>
			<td><%= project.start_date %></td>
			<td><%= project.end_date %></td>
			<td><%= project.team.name %></td>
			
			<td><%= link_to 'Show', project_path(project) %></td>
			
			<td><% if current_user.admin? %>
			<%= link_to 'Edit', edit_project_path(project) %></td>
			<td><%= link_to 'Delete', project_path(project),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
              <% end %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Back', welcome_index_path %>
