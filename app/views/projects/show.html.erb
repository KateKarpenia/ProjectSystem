<div class="container">
<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
 
<p>
  <strong>Summary:</strong>
  <%= @project.summary %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= @project.start_date %>
</p>

<p>
  <strong>End Date:</strong>
  <%= @project.end_date %>
</p>

<h4>Posts</h4>
<%= render @project.posts %>

<h4>Add new post</h4>
<%= render 'posts/form' %>




<% if current_user.admin? %>
<%= link_to 'Edit project', edit_project_path(@project) %>
<% end %>
</div>

