<p>
  <strong>User:</strong>
  <%= current_user.first_name %>
</p>
<p>
  <strong>Content:</strong>
  <%= post.content %>
</p>

<% if current_user.admin? %>
<p>
  <%= link_to 'Destroy Post', [post.project, post],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>
<% end %>

